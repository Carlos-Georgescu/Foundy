<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadLost">
    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Add new lost item"
        android:textSize="48sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp" />

    <ImageView
        android:id="@+id/itemPicture"
        android:layout_width="269dp"
        android:layout_height="105dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/topText"
        tools:layout_editor_absoluteX="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/bebas_neue"
        android:text="What did you lose? "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/itemPicture"
        app:layout_constraintTop_toBottomOf="@+id/itemPicture" />

    <EditText
        android:id="@+id/lostItemLocation"
        android:layout_width="339dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="ex. Wallet"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/electronic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Electronic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="244dp"
        android:fontFamily="@font/bebas_neue"
        android:text="What category"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemPicture" />

    <EditText
        android:id="@+id/selectDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="25dp" />

    <Button
        android:id="@+id/office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Office"
        app:layout_constraintStart_toEndOf="@+id/toys"
        app:layout_constraintTop_toTopOf="@+id/toys" />

    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="428dp"
        android:fontFamily="@font/bebas_neue"
        android:text="[Category specific question #1]"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/selectDateText"
        app:layout_constraintTop_toBottomOf="@+id/itemPicture" />

    <Button
        android:id="@+id/helpMeFind"
        android:layout_width="306dp"
        android:layout_height="52dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:text="Help me find it!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question2Answer" />

    <EditText
        android:id="@+id/question1Answer"
        android:layout_width="339dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="436dp"
        android:ems="10"
        android:hint="ex. Wallet"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="504dp"
        android:fontFamily="@font/bebas_neue"
        android:text="[Category specific question #2]"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/selectDateText"
        app:layout_constraintTop_toBottomOf="@+id/itemPicture" />

    <EditText
        android:id="@+id/question2Answer"
        android:layout_width="339dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="508dp"
        android:ems="10"
        android:hint="ex. Wallet"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Select Date"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/itemPicture"
        app:layout_constraintTop_toBottomOf="@+id/itemPicture" />

    <Button
        android:id="@+id/toys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="14dp"
        android:text="Toys"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/electronic" />

    <Button
        android:id="@+id/jewlery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Jewlery"
        app:layout_constraintStart_toEndOf="@+id/electronic"
        app:layout_constraintTop_toTopOf="@+id/electronic" />

    <Button
        android:id="@+id/clothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Clothing"
        app:layout_constraintStart_toEndOf="@+id/jewlery"
        app:layout_constraintTop_toTopOf="@+id/jewlery" />

    <Button
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Other"
        app:layout_constraintStart_toEndOf="@+id/office"
        app:layout_constraintTop_toTopOf="@+id/office" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Where did you lost it?"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/itemPicture"
        app:layout_constraintTop_toBottomOf="@+id/itemPicture" />

    <Button
        android:id="@+id/openMapButton"
        android:layout_width="79dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:text="Open Map"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/lostItemLocation"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/whatLostText"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/whatLostText"
        android:layout_width="339dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="ex. Wallet"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/takePictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Take Picture"
        app:layout_constraintStart_toEndOf="@+id/itemPicture"
        app:layout_constraintTop_toBottomOf="@+id/topText" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>